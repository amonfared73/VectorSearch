<UserControl x:Class="VectorSearch.WPF.Views.WordDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VectorSearch.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" FontSize="36" FontWeight="Bold" Text="{Binding Word}" Margin="10"/>
                <StackPanel Margin="10" Grid.Row="1" Orientation="Horizontal">
                    <TextBlock FontWeight="Bold" FontSize="24" Margin="0 5" Text="Similarity: "/>
                    <TextBlock Margin="5" FontSize="24" Text="{Binding Similarity}"/>
                </StackPanel>

            </Grid>

            <Grid Grid.Column="1" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding DictionaryResultItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" MaxWidth="400">
                                        <TextBlock Text="•" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Top"/>
                                        <TextBlock TextWrapping="Wrap">
                                            <Run Text="{Binding PartOfSpeech}" FontWeight="Bold"/>
                                            <Run Text=": " />
                                            <Run Text="{Binding Definition}" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        

        <Button Grid.Row="1" HorizontalAlignment="Right" Content="Close" Command="{Binding LoadWordMeaningCommand}"/>
    </Grid>
</UserControl>
