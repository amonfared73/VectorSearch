<Window x:Class="VectorSearch.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorSearch.WPF"
        xmlns:enums="clr-namespace:VectorSearch.Domain.Enums;assembly=VectorSearch.Domain"
        xmlns:tools="clr-namespace:VectorSearch.WPF.Tools"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:loadingspinnercontrol="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d" WindowState="Maximized"
        Title="Vector Search" Height="450" Width="800">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <loadingspinnercontrol:LoadingSpinner Diameter="100" Thickness="2" IsLoading="True"/>
            <TextBlock Text="Loading words ..." VerticalAlignment="Center" TextAlignment="Center" Margin="0 5 0 0"/>
        </StackPanel>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            
            <TextBox Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                </TextBox.InputBindings>
            </TextBox>

            <ComboBox Width="200" Grid.Row="0" Grid.Column="1" Margin="0,10,10,10"  
                      ItemsSource="{Binding Source={tools:EnumBindingSource {x:Type enums:GloveType}}}" IsEnabled="{Binding IsGloveTypeEnabled, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding GloveType, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center">
            </ComboBox>

            <CheckBox Grid.Row="0" Grid.Column="2" Margin="0,0,10,10" 
                  Content="Vector Search" 
                  IsChecked="{Binding IsVectorSearchEnabled}" />

            

            <Button Grid.Row="0" Grid.Column="3" Margin="0,10,10,10" 
                Content="Search" 
                Command="{Binding SearchCommand}">
            </Button>

            
            <DataGrid Grid.Row="1" Grid.ColumnSpan="4" ItemsSource="{Binding Words}" 
                  AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100" />
                    <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="120" />
                    <DataGridTextColumn Header="Similarity" Binding="{Binding Similarity}" Width="100" />
                    <DataGridTextColumn Header="Vector" Binding="{Binding Vector}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Margin="5" Content="Previous" Width="75" Height="30" Command="{Binding PreviousPageCommand}" />
                <TextBox Margin="5" Width="350" Height="30" Text="{Binding PaginationInfo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                     Background="LightGray" BorderBrush="Gray" BorderThickness="1" FontSize="14" 
                     IsReadOnly="True" />
                <Button Margin="5" Content="Next" Width="75" Height="30" Command="{Binding NextPageCommand}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
